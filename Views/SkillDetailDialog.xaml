<ui:FluentWindow
    x:Class="SkillManager.Views.SkillDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="技能详情"
    Width="520"
    Height="620"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="技能详情" />

        <ScrollViewer Grid.Row="1" Margin="24,12,24,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ui:Card Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="SemiBold" Text="{Binding Name}" />
                        <TextBlock
                            Margin="0,6,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding GroupNamesDisplay, StringFormat=所属分组：{0}}" />
                        <TextBlock
                            Margin="0,8,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding Description}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </ui:Card>

                <ui:Card Margin="0,12,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="14" FontWeight="SemiBold" Text="技能标题" />
                        <TextBlock
                            Margin="0,6,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding SkillTitle}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </ui:Card>

                <ui:Card Margin="0,12,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="14" FontWeight="SemiBold" Text="使用场景" />
                        <TextBlock
                            Margin="0,6,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding WhenToUse}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </ui:Card>

                <TextBlock
                    Margin="4,12,4,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="{Binding FullPath, StringFormat=路径：{0}}" />
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="24,16,24,24">
            <ui:Button
                HorizontalAlignment="Right"
                Appearance="Primary"
                Content="关闭"
                Icon="{ui:SymbolIcon Dismiss24}"
                Click="CloseButton_Click" />
        </Grid>
    </Grid>
</ui:FluentWindow>
