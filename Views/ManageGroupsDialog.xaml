<ui:FluentWindow
    x:Class="SkillManager.Views.ManageGroupsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="管理分组"
    Width="480"
    Height="400"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <ui:TitleBar Grid.Row="0" Title="管理分组" />

        <!--  主内容区  -->
        <Grid Grid.Row="1" Margin="24,12,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  创建新分组  -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:TextBox
                    x:Name="NewGroupNameTextBox"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    PlaceholderText="输入新分组名称..."
                    KeyDown="NewGroupNameTextBox_KeyDown" />

                <ui:Button
                    Grid.Column="1"
                    Appearance="Primary"
                    Content="创建分组"
                    Icon="{ui:SymbolIcon Add24}"
                    Click="CreateGroupButton_Click" />
            </Grid>

            <!--  分组列表  -->
            <ui:Card Grid.Row="1" Padding="8">
                <Grid>
                    <ui:ListView
                        x:Name="GroupsListView"
                        ItemsSource="{Binding Groups}"
                        VirtualizingPanel.IsVirtualizing="True">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                            <Run Text="{Binding SkillNames.Count, Mode=OneWay}" />
                                            <Run Text="个技能" />
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="{Binding CreatedTime, StringFormat='yyyy-MM-dd'}" />

                                    <ui:Button
                                        Grid.Column="2"
                                        Appearance="Danger"
                                        Click="DeleteGroupButton_Click"
                                        Icon="{ui:SymbolIcon Delete24}"
                                        Tag="{Binding Id}"
                                        ToolTip="删除分组" />
                                </Grid>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>

                    <!--  空状态  -->
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding HasNoGroups, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ui:SymbolIcon
                            FontSize="48"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Symbol="FolderOpen24" />
                        <TextBlock
                            Margin="0,8,0,0"
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="暂无分组" />
                        <TextBlock
                            Margin="0,4,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="在上方输入名称创建新分组" />
                    </StackPanel>
                </Grid>
            </ui:Card>
        </Grid>

        <!--  底部按钮  -->
        <Grid Grid.Row="2" Margin="24,16,24,24">
            <ui:Button
                HorizontalAlignment="Right"
                Appearance="Primary"
                Content="完成"
                Icon="{ui:SymbolIcon Checkmark24}"
                Click="CloseButton_Click" />
        </Grid>
    </Grid>
</ui:FluentWindow>
