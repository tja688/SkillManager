<Page
    x:Class="SkillManager.Views.ProjectDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SkillManager.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:SkillManager.ViewModels"
    Title="项目详情"
    d:DataContext="{d:DesignInstance vm:ProjectDetailViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button
                Grid.Column="0"
                Margin="0,0,16,0"
                Command="{Binding GoBackCommand}"
                Icon="{ui:SymbolIcon ArrowLeft24}"
                ToolTip="返回项目列表" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:SymbolIcon
                    Margin="0,0,12,0"
                    FontSize="28"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Symbol="Folder24" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="{Binding CurrentProject.Name}" />
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal">
                <ui:Button
                    Margin="0,0,8,0"
                    Click="AddSkillToProject_Click"
                    Icon="{ui:SymbolIcon Add24}"
                    ToolTip="添加技能到所有技能区" />
                <ui:Button
                    Margin="0,0,8,0"
                    Click="AddSkillZone_Click"
                    Icon="{ui:SymbolIcon FolderAdd24}"
                    ToolTip="添加技能区" />
                <ui:Button
                    Command="{Binding RefreshCommand}"
                    Icon="{ui:SymbolIcon ArrowSync24}"
                    ToolTip="刷新" />
            </StackPanel>
        </Grid>

        <!--  项目信息  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,16"
            Padding="16"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="13"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding CurrentProject.Path}"
                        TextTrimming="CharacterEllipsis"
                        ToolTip="{Binding CurrentProject.Path}" />
                    <StackPanel
                        Margin="0,8,0,0"
                        Orientation="Horizontal">
                        <StackPanel Margin="0,0,24,0" Orientation="Horizontal">
                            <ui:SymbolIcon
                                Margin="0,0,6,0"
                                FontSize="14"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Symbol="Code24" />
                            <TextBlock Text="{Binding CurrentProject.TotalSkillCount, StringFormat={}{0} 个技能}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon
                                Margin="0,0,6,0"
                                FontSize="14"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Symbol="Layer24" />
                            <TextBlock Text="{Binding CurrentProject.SkillZones.Count, StringFormat={}{0} 个技能区}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <ui:Button
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Click="OpenProjectFolder_Click"
                    Icon="{ui:SymbolIcon FolderOpen24}">
                    打开文件夹
                </ui:Button>
            </Grid>
        </Border>

        <!--  技能区列表  -->
        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CurrentProject.SkillZones}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:SkillZone}">
                        <ui:Card Margin="0,0,0,12" Padding="0">
                            <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                                <Expander.Header>
                                    <Grid Margin="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            Orientation="Horizontal">
                                            <ui:SymbolIcon
                                                Margin="0,0,12,0"
                                                FontSize="20"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                Symbol="Folder24" />
                                            <TextBlock
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Text="{Binding Name}" />
                                            <Border
                                                Padding="8,2"
                                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                CornerRadius="10">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="White"
                                                    Text="{Binding Skills.Count}" />
                                            </Border>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                                            <ui:Button
                                                Margin="0,0,4,0"
                                                Padding="6,4"
                                                Click="AddSkillToZone_Click"
                                                DataContext="{Binding}"
                                                Icon="{ui:SymbolIcon Add20}"
                                                ToolTip="添加技能" />
                                            <ui:Button
                                                Margin="0,0,4,0"
                                                Padding="6,4"
                                                Click="OpenZoneFolder_Click"
                                                DataContext="{Binding}"
                                                Icon="{ui:SymbolIcon FolderOpen20}"
                                                ToolTip="打开文件夹" />
                                            <ui:Button
                                                Padding="6,4"
                                                Click="DeleteSkillZone_Click"
                                                DataContext="{Binding}"
                                                Icon="{ui:SymbolIcon Delete20}"
                                                ToolTip="删除技能区" />
                                        </StackPanel>
                                    </Grid>
                                </Expander.Header>

                                <!--  技能列表 - 使用独立ScrollViewer解决滚轮问题  -->
                                <ScrollViewer
                                    Margin="8,8,8,12"
                                    MaxHeight="320"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Skills}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <!--  使用WrapPanel实现网格布局  -->
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:SkillFolder}">
                                                <!--  矩形卡片式技能格子  -->
                                                <Border
                                                    Width="180"
                                                    Margin="4"
                                                    Padding="10"
                                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                                    CornerRadius="8"
                                                    ToolTip="{Binding Description}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <!--  技能名称  -->
                                                        <TextBlock
                                                            Grid.Row="0"
                                                            MaxHeight="40"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            Text="{Binding Name}"
                                                            TextTrimming="CharacterEllipsis"
                                                            TextWrapping="Wrap" />

                                                        <!--  操作按钮组  -->
                                                        <StackPanel
                                                            Grid.Row="1"
                                                            Margin="0,8,0,0"
                                                            HorizontalAlignment="Center"
                                                            Orientation="Horizontal">
                                                            <ui:Button
                                                                Margin="0,0,4,0"
                                                                Padding="6,4"
                                                                Click="ViewSkillMd_Click"
                                                                DataContext="{Binding}"
                                                                Icon="{ui:SymbolIcon Document16}"
                                                                ToolTip="查看 SKILL.md" />
                                                            <ui:Button
                                                                Margin="0,0,4,0"
                                                                Padding="6,4"
                                                                Click="OpenSkillFolder_Click"
                                                                DataContext="{Binding}"
                                                                Icon="{ui:SymbolIcon FolderOpen16}"
                                                                ToolTip="打开文件夹" />
                                                            <ui:Button
                                                                Padding="6,4"
                                                                Click="DeleteSkillFromZone_Click"
                                                                DataContext="{Binding}"
                                                                Icon="{ui:SymbolIcon Delete16}"
                                                                ToolTip="删除技能" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Expander>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  空状态提示  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding CurrentProject.SkillZones.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <ui:SymbolIcon
                FontSize="64"
                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                Symbol="Layer24" />
            <TextBlock
                Margin="0,16,0,0"
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="暂无技能区" />
            <TextBlock
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                FontSize="13"
                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                Text="点击上方「添加技能区」按钮创建新的技能区" />
        </StackPanel>

        <!--  状态栏  -->
        <Border
            Grid.Row="3"
            Margin="0,16,0,0"
            Padding="12,8"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="4">
            <TextBlock
                FontSize="13"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{Binding StatusMessage}" />
        </Border>
    </Grid>
</Page>
