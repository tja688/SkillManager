<Page
    x:Class="SkillManager.Views.AutomationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SkillManager.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:SkillManager.ViewModels"
    Title="自动化"
    d:DataContext="{d:DesignInstance vm:AutomationViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  标题区  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Text="自动化" />
            <TextBlock
                Margin="0,4,0,0"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="监控常用下载目录，应用启动时自动抓取并导入技能" />
        </StackPanel>

        <!--  监控目录  -->
        <ui:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="监控目录" />
                        <TextBlock
                            Margin="0,4,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="启动时会自动扫描这些目录内的技能文件夹" />
                    </StackPanel>

                    <ui:Button
                        Grid.Column="1"
                        Command="{Binding AddWatchPathCommand}"
                        Content="添加目录"
                        Icon="{ui:SymbolIcon FolderOpen24}" />
                </Grid>

                <StackPanel Grid.Row="1" Margin="0,12,0,0">
                    <ItemsControl ItemsSource="{Binding WatchPaths}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding}"
                                        TextTrimming="CharacterEllipsis" />
                                    <ui:Button
                                        Grid.Column="1"
                                        Appearance="Transparent"
                                        Command="{Binding DataContext.RemoveWatchPathCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Icon="{ui:SymbolIcon Dismiss24}"
                                        ToolTip="移除" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="暂无监控目录"
                        Visibility="{Binding WatchPaths.Count, Converter={StaticResource CountToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </ui:Card>

        <!--  执行控制  -->
        <ui:Card Grid.Row="2" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="自动导入" />
                        <TextBlock
                            Margin="0,4,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding LastRunSummary}" />
                        <TextBlock
                            Margin="0,4,0,0"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="{Binding StatusMessage}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button
                            Appearance="Primary"
                            Command="{Binding RunAutoImportCommand}"
                            Content="立即执行"
                            Icon="{ui:SymbolIcon ArrowClockwise24}"
                            IsEnabled="{Binding IsRunning, Converter={StaticResource BoolToInverseConverter}}" />
                        <ui:ProgressRing
                            Margin="12,0,0,0"
                            Width="16"
                            Height="16"
                            IsIndeterminate="True"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>

                <!-- 轮询监控设置 -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock 
                            VerticalAlignment="Center"
                            Text="轮询间隔 (秒):" 
                            Margin="0,0,8,0" />
                        <ui:NumberBox
                            x:Name="PollingIntervalBox"
                            Width="100"
                            Minimum="5"
                            Maximum="300"
                            SmallChange="5"
                            LargeChange="30"
                            SpinButtonPlacementMode="Compact"
                            Value="{Binding PollingIntervalSeconds, Mode=TwoWay}"
                            ValueChanged="PollingIntervalBox_ValueChanged" />
                    </StackPanel>

                    <TextBlock 
                        Grid.Column="1"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding NextPollTime}"
                        Visibility="{Binding IsPollingEnabled, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <ui:Button
                            Appearance="Success"
                            Command="{Binding StartPollingCommand}"
                            Content="启动轮询"
                            Icon="{ui:SymbolIcon Play24}"
                            Visibility="{Binding IsPollingEnabled, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                        <ui:Button
                            Appearance="Caution"
                            Command="{Binding StopPollingCommand}"
                            Content="停止轮询"
                            Icon="{ui:SymbolIcon Stop24}"
                            Visibility="{Binding IsPollingEnabled, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </ui:Card>

        <!--  导入日志  -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="最近导入记录" />

                <ui:Button
                    Grid.Column="1"
                    Command="{Binding ClearLogsCommand}"
                    Content="清空记录"
                    Icon="{ui:SymbolIcon Dismiss24}"
                    IsEnabled="{Binding Logs.Count, Converter={StaticResource CountToBoolConverter}}" />
            </Grid>

            <ui:ListView Grid.Row="1" ItemsSource="{Binding Logs}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:AutomationLogItem}">
                        <ui:Card Margin="0,4" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Text="{Binding SkillName}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding Result}" />
                                </Grid>

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,6,0,0"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="{Binding Message}"
                                    TextTrimming="CharacterEllipsis" />
                                <TextBlock
                                    Grid.Row="2"
                                    Margin="0,4,0,0"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding SourcePath}"
                                    TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </ui:Card>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>
    </Grid>
</Page>
