<Page
    x:Class="SkillManager.Views.CleanupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SkillManager.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:SkillManager.ViewModels"
    Title="清理"
    d:DataContext="{d:DesignInstance vm:CleanupViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题区  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Text="清理" />
            <TextBlock
                Margin="0,4,0,0"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="设置保护区后，可一键扫描并清理全局技能文件夹" />
        </StackPanel>

        <!--  保护区  -->
        <ui:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="保护区" />
                        <TextBlock
                            Margin="0,4,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="这些目录不会被扫描和删除，可长期持久化保存" />
                    </StackPanel>

                    <ui:Button
                        Grid.Column="1"
                        Command="{Binding AddProtectedPathCommand}"
                        Content="添加保护区"
                        Icon="{ui:SymbolIcon FolderOpen24}" />
                </Grid>

                <StackPanel Grid.Row="1" Margin="0,12,0,0">
                    <ItemsControl ItemsSource="{Binding ProtectedPaths}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding}"
                                        TextTrimming="CharacterEllipsis" />
                                    <ui:Button
                                        Grid.Column="1"
                                        Appearance="Transparent"
                                        Command="{Binding DataContext.RemoveProtectedPathCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Icon="{ui:SymbolIcon Dismiss24}"
                                        ToolTip="移除" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="暂无保护区"
                        Visibility="{Binding ProtectedPaths.Count, Converter={StaticResource CountToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </ui:Card>

        <!--  扫描控制  -->
        <ui:Card Grid.Row="2" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="全局清理扫描" />
                    <TextBlock
                        Margin="0,4,0,0"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="扫描所有固定磁盘中的 SKILL.md 文件夹，自动排除保护区" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Primary"
                        Command="{Binding ScanGlobalCommand}"
                        Content="一键扫描"
                        Icon="{ui:SymbolIcon Search24}"
                        IsEnabled="{Binding IsScanning, Converter={StaticResource BoolToInverseConverter}}" />
                    <ui:Button
                        Appearance="Caution"
                        Command="{Binding CancelScanCommand}"
                        Content="取消"
                        Icon="{ui:SymbolIcon Dismiss24}"
                        Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </ui:Card>

        <!--  扫描结果  -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold">
                    <Run Text="可清理技能 (" />
                    <Run Text="{Binding FoundSkills.Count, Mode=OneWay}" />
                    <Run Text=")" />
                </TextBlock>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button
                        Margin="0,0,8,0"
                        Command="{Binding SelectAllCommand}"
                        Content="全选"
                        Icon="{ui:SymbolIcon Checkmark24}"
                        IsEnabled="{Binding FoundSkills.Count, Converter={StaticResource CountToBoolConverter}}" />
                    <ui:Button
                        Margin="0,0,8,0"
                        Command="{Binding DeleteSelectedCommand}"
                        Content="删除选中"
                        Icon="{ui:SymbolIcon Delete24}"
                        Appearance="Secondary"
                        IsEnabled="{Binding HasSelection}" />
                    <ui:Button
                        Appearance="Danger"
                        Command="{Binding DeleteAllCommand}"
                        Content="一键清理"
                        Icon="{ui:SymbolIcon Delete24}"
                        IsEnabled="{Binding FoundSkills.Count, Converter={StaticResource CountToBoolConverter}}" />
                </StackPanel>
            </Grid>

            <ui:ListView Grid.Row="1" ItemsSource="{Binding FoundSkills}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:SkillFolder}">
                        <ui:Card Margin="0,4" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <CheckBox
                                    Grid.Column="0"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsSelected}" />

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding DescriptionDisplay}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="{Binding FullPath}"
                                        TextTrimming="CharacterEllipsis" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal">
                                    <ui:Button
                                        Margin="0,0,8,0"
                                        Appearance="Secondary"
                                        Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                        CommandParameter="{Binding}"
                                        Icon="{ui:SymbolIcon FolderOpen24}"
                                        ToolTip="打开文件夹" />
                                </StackPanel>
                            </Grid>
                        </ui:Card>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>

            <!--  空状态  -->
            <ui:Card
                Grid.Row="1"
                Padding="48"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding FoundSkills.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <ui:SymbolIcon
                        FontSize="64"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Symbol="Delete24" />
                    <TextBlock
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="暂无可清理技能" />
                    <TextBlock
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="点击一键扫描，列出所有可清理项" />
                </StackPanel>
            </ui:Card>
        </Grid>

        <!--  状态栏  -->
        <ui:Card Grid.Row="4" Margin="0,16,0,0" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{Binding StatusMessage}" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="{Binding ScanStats}" />
            </Grid>
        </ui:Card>
    </Grid>
</Page>
