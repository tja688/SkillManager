<Page
    x:Class="SkillManager.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="设置"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  标题区  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Text="设置" />
            <TextBlock
                Margin="0,4,0,0"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="应用程序设置和关于信息" />
        </StackPanel>

        <!--  设置内容  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  外观设置  -->
                <ui:CardExpander
                    Margin="0,0,0,16"
                    Header="外观"
                    Icon="{ui:SymbolIcon PaintBrush24}"
                    IsExpanded="True">
                    <StackPanel Margin="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontWeight="SemiBold" Text="主题" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="选择应用程序的主题模式" />
                            </StackPanel>

                            <ComboBox
                                x:Name="ThemeComboBox"
                                Grid.Column="1"
                                Width="150"
                                SelectionChanged="ThemeComboBox_SelectionChanged">
                                <ComboBoxItem Content="跟随系统" IsSelected="True" />
                                <ComboBoxItem Content="浅色" />
                                <ComboBoxItem Content="深色" />
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </ui:CardExpander>

                <!--  关于  -->
                <ui:CardExpander
                    Header="关于"
                    Icon="{ui:SymbolIcon Info24}"
                    IsExpanded="True">
                    <StackPanel Margin="16">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon FontSize="48" Symbol="Code24" />
                            <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="Skill Manager" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="版本 1.0.0" />
                            </StackPanel>
                        </StackPanel>

                        <TextBlock
                            Margin="0,16,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="一个用于管理 Agent 技能文件夹的工具。可以扫描文件系统中包含 SKILL.md 的目录，并将其导入到本地技能库中进行管理。"
                            TextWrapping="Wrap" />

                        <ui:HyperlinkButton
                            Margin="0,12,0,0"
                            Content="技术支持: .NET 10 + WPF + WPF UI"
                            Icon="{ui:SymbolIcon Heart24}"
                            NavigateUri="https://wpfui.lepo.co/" />
                    </StackPanel>
                </ui:CardExpander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
