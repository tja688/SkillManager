<ui:FluentWindow
    x:Class="SkillManager.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SkillManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:SkillManager.ViewModels"
    Title="Skill Manager"
    Width="1200"
    Height="800"
    MinWidth="900"
    MinHeight="600"
    Icon="pack://application:,,,/Assets/icon.png"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <ui:TitleBar
            Title="Skill Manager"
            Grid.Row="0">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon
                        Margin="8,0"
                        FontSize="20"
                        Symbol="Code24" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Skill Manager" />
                    <!-- 调试工具入口按钮 -->
                    <ui:Button
                        x:Name="DebugButton"
                        Margin="16,0,0,0"
                        Padding="8,4"
                        Appearance="Transparent"
                        ToolTip="打开调试工具"
                        Click="DebugButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Bug24" FontSize="14" />
                            <TextBlock Text="Debug" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!--  主内容区  -->
        <local:SkillNavigationView
            x:Name="NavigationView"
            Grid.Row="1"
            Style="{DynamicResource {x:Type ui:NavigationView}}"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleVisible="True"
            OpenPaneLength="280"
            PaneDisplayMode="Left"
            SelectionChanged="NavigationView_SelectionChanged">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    x:Name="LibraryNavItem"
                    Content="技能库"
                    Icon="{ui:SymbolIcon Library24}"
                    Tag=""
                    MouseLeftButtonUp="LibraryNavItem_MouseLeftButtonUp"
                    TargetPageType="{x:Type local:AllSkillsPage}" />
                <ui:NavigationViewItem
                    Content="扫描导入"
                    Icon="{ui:SymbolIcon Search24}"
                    TargetPageType="{x:Type local:ScanPage}" />
                <ui:NavigationViewItem
                    Content="项目"
                    Icon="{ui:SymbolIcon Folder24}"
                    TargetPageType="{x:Type local:ProjectListPage}" />
                <ui:NavigationViewItem
                    Content="下载Skills"
                    Icon="{ui:SymbolIcon ArrowDownload24}"
                    TargetPageType="{x:Type local:DownloadSkillsPage}" />
                <ui:NavigationViewItem
                    Content="清理"
                    Icon="{ui:SymbolIcon Delete24}"
                    TargetPageType="{x:Type local:CleanupPage}" />
                <ui:NavigationViewItem
                    Content="自动化"
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    TargetPageType="{x:Type local:AutomationPage}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="设置"
                    Icon="{ui:SymbolIcon Settings24}"
                    TargetPageType="{x:Type local:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>

        </local:SkillNavigationView>
    </Grid>
</ui:FluentWindow>
