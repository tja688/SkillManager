<Application
    x:Class="SkillManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SkillManager.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!--  转换器  -->
            <converters:BoolToInverseConverter x:Key="BoolToInverseConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:CountToBoolConverter x:Key="CountToBoolConverter" />
            <converters:BoolToChevronConverter x:Key="BoolToChevronConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:WidthToColumnsConverter x:Key="WidthToColumnsConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
